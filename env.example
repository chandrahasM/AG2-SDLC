# Environment Variables for Workflow 1: Code to Design

# Environment Configuration
ENVIRONMENT=development
DEBUG_MODE=false
LOG_LEVEL=INFO
LOG_FILE=

# Database Configuration (optional)
DATABASE_URL=
REDIS_URL=

# AG2 Integration
AG2_API_URL=
AG2_API_KEY=
AG2_WORKSPACE_ID=

# External Service API Keys
GITHUB_TOKEN=
GITLAB_TOKEN=
CONFLUENCE_URL=
CONFLUENCE_TOKEN=

# LLM Configuration
LLM_MODEL=gpt-4
LLM_TEMPERATURE=0.1
LLM_MAX_TOKENS=4000
LLM_TIMEOUT=60

# File Processing
MAX_FILE_SIZE_MB=10
SUPPORTED_LANGUAGES=python,javascript,typescript,java,go,rust,csharp,php,ruby,cpp,c,html,css,json,yaml,xml,markdown

# Output Configuration
OUTPUT_FORMAT=markdown
INCLUDE_DIAGRAMS=true
DIAGRAM_FORMAT=text

# Validation
VALIDATION_ENABLED=true
CONFIDENCE_THRESHOLD=0.7
AUTO_RETRY_FAILED_AGENTS=true

# Performance
ENABLE_CACHING=true
CACHE_TTL_HOURS=24
MAX_MEMORY_USAGE_MB=2048

# Agent Configuration
REPOSITORY_ANALYZER_ENABLED=true
DOCUMENTATION_SYNTHESIZER_ENABLED=true
DESIGN_ARCHITECT_ENABLED=true
TEST_ANALYST_ENABLED=true
DEVOPS_DESIGNER_ENABLED=true
QA_VALIDATOR_ENABLED=true

# Repository Analyzer
REPO_ANALYZER_MAX_FILE_SIZE_MB=10
REPO_ANALYZER_INCLUDE_COMMENTS=true
REPO_ANALYZER_INCLUDE_DOCSTRINGS=true
REPO_ANALYZER_ANALYZE_TEST_FILES=true
REPO_ANALYZER_GENERATE_METRICS=true
REPO_ANALYZER_LANGUAGE_SPECIFIC=true

# Documentation Synthesizer
DOC_SYNTHESIZER_INCLUDE_MARKDOWN=true
DOC_SYNTHESIZER_INCLUDE_CONFLUENCE=false
DOC_SYNTHESIZER_INCLUDE_NOTION=false
DOC_SYNTHESIZER_SIMILARITY_THRESHOLD=0.7
DOC_SYNTHESIZER_GAP_ANALYSIS_DEPTH=3

# Design Architect
DESIGN_ARCHITECT_INCLUDE_DIAGRAMS=true
DESIGN_ARCHITECT_DIAGRAM_FORMAT=text
DESIGN_ARCHITECT_OUTPUT_FORMAT=markdown
DESIGN_ARCHITECT_DETAIL_LEVEL=comprehensive

# Test Analyst
TEST_ANALYST_ANALYZE_COVERAGE=true
TEST_ANALYST_GENERATE_SCENARIOS=true
TEST_ANALYST_INCLUDE_PERFORMANCE_TESTS=true
TEST_ANALYST_FRAMEWORK_DETECTION=true

# DevOps Designer
DEVOPS_DESIGNER_ANALYZE_LOGS=true
DEVOPS_DESIGNER_DETECT_INFRASTRUCTURE=true
DEVOPS_DESIGNER_GENERATE_MONITORING=true
DEVOPS_DESIGNER_INCLUDE_SECURITY=true

# QA Validator
QA_VALIDATOR_GENERATE_QUESTIONS=true
QA_VALIDATOR_VALIDATE_CONSISTENCY=true
QA_VALIDATOR_ASSESS_CONFIDENCE=true
QA_VALIDATOR_PRIORITIZE_ISSUES=true
QA_VALIDATOR_QUESTION_COUNT_LIMIT=20